#include <iostream>
using namespace std;
float fun(float a,float b){
    auto fun1 = [a,b](){
        float total = b - b * ( a / 100 );
        return total;
    };
    return fun1();
}
int main(){
    float dis,price;
    cout<<"Enter the discount ratio: "<<endl;
    cin>>dis;
    cout<<"Enter the  price: "<<endl;
    cin>>price;
    cout<<"Total price: "<<price<<endl;
    cout<<" After discount: "<<fun(dis,price)<<endl;
    return 0;
}
