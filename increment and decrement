#include <iostream>
using namespace std;
int main() {
    int n,count=0;
    std::cout << "Enter a number";
    cin>>n;

for(int i=0; i<n; i++){
    for(int j=i; j<n; j++){
        cout<<j+1<<"\t";
        count++;
    }
     for(int k=i; k>=0; k--){
           cout<<k+1<<"\t";
     }
    cout<<endl;
}
cout<<"Total numbers are: "<<count;
    return 0;
}
